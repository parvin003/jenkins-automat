pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *') // Polls every 5 minutes
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                git branch: 'b1', url: 'https://github.com/parvin003/jenkins-automat.git'
            }
        }
        stage('Build') {
            steps {
                // Build your project
                sh 'echo "Building the project..."'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'echo "Running tests..."'
            }
        }
        stage('Deploy') {
            steps {
                // Deploy your application
                sh 'echo "Deploying the application..."'
            }
        }
    }
}
